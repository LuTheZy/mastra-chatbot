# Environment Configuration
NODE_ENV=development

# Development Storage (SQLite for testing)
ENABLE_DEV_STORAGE=true

# OpenAI API Configuration  
OPENAI_API_KEY=your_openai_api_key_here

# LiteLLM Proxy Configuration
LITELLM_PROXY_URL=http://localhost:4000
LITELLM_PROXY_API_KEY=your_litellm_proxy_api_key_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_URL=https://your-ngrok-url.ngrok.io/webhook/telegram

# Ngrok Configuration (optional - for automation)
NGROK_AUTHTOKEN=your_ngrok_authtoken_here
NGROK_SUBDOMAIN=your-custom-subdomain
PORT=3000
